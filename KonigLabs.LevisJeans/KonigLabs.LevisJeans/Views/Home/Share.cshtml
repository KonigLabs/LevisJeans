@model KonigLabs.LevisJeans.Models.ShareVm

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script>
	    function share(url) {
            window.onfocus = function() {
                window.open(url);
                window.location = '/Home/Thanks';
            };
        }
    </script>
}

<header><a href="/" style="display: block; height: inherit;"></a></header>
<section class="text-center">
    <h2 class="number">ПОДЕЛИТЬСЯ РЕЗУЛЬТАТОМ<br/> В СОЦИАЛЬНОЙ СЕТИ</h2>
    <a target="_blank" onclick="share('https://vk.com');" href="https://vk.com/share.php?image=http%3A//koniglabs.ru/FilesForDelete/Phrases/@(Model.Img).png&url=http%3A//www.levi.com/RU/ru_RU/&title=@Uri.EscapeDataString(Model.Phrase)&description=%20" class="content share vk"></a>
    <a target="_blank" onclick="share('https://facebook.com');" href="https://www.facebook.com/sharer/sharer.php?u=http%3A//37.228.91.148%3A8117/Home/Image/@(Model.Img)" class="content share fb"></a>
    <p class="noshare">
        <a href="@Url.Action("Thanks", "Home")" class="btn">Не хочу делиться</a>
    </p>
</section>
